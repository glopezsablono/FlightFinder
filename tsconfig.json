{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "sourceMap": false,
    "declaration": false,
      "outDir": "dist",
      "baseUrl": "./src",
      "lib": [
        "es2020"
      ],
      "paths": {
        "*": [
          "node_modules/",
          "src/types/*"
        ],
        "@controllers/*": [
          "./controllers/*",
          "../dist/controllers/*"
        ],
        "@interfaces/*": [
          "./interfaces/*",
          "../dist/interfaces/*"
        ],
        "@mappers/*": [
          "./mappers/*",
          "../dist/mappers/*"
        ],
        "@models/*": [
          "./models/*",
          "../dist/models/*"
        ],
        "@routes/*": [
          "./routes/*",
          "../dist/routes/*"
        ],
        "@services/*": [
          "./services/*",
          "../dist/services/*"
        ],
        "@serializers/*": [
          "./serializers/*",
          "../dist/serializers/*"
        ],
        "@middlewares/*": [
          "./middlewares/*",
          "../dist/middlewares/*"
        ]
      }
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
