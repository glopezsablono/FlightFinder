{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "sourceMap": false,
    "declaration": false,
      "outDir": "dist",
      "baseUrl": "./src",
      "lib": [
        "es2020"
      ],
      "paths": {
          "*": [
              "node_modules/",
              "src/types/*"
          ],
          "@controllers/*": [
            "./controllers/*",
            "../dist/controllers/*"
          ],
          "@routes/*": [
            "./routes/*",
            "../dist/routes/*"
          ],
          "@services/*": [
            "./services/*",
            "../dist/services/*",
            "./services/flight-service.ts"
          ],
          "@middlewares/*": [
            "./middlewares/*",
            "../dist/middlewares/*"
          ]
      }
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
